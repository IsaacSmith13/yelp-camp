<% include ../partials/header %>
    <div class="row">
        <div class="col-md-4">
            <h1>
                <%= user.firstName + " " + user.lastName %>
            </h1>
            <img src="<%= user.avatar %>" alt="Image not found" onerror="this.onerror=null;this.src='https://images.unsplash.com/placeholder-avatars/large.jpg';" />
            <% if(currentUser && currentUser.isAdmin) { %>
                <div class="caption">
                    <a href="mailto:<%= user.email %>">
                        <%= user.email %>
                    </a>
                </div>
                <% } %>
                    <div>
                        <% if(user.description) { %>
                            <%= user.description %>
                                <% } %>
                    </div>
        </div>
        <div class="col-md-8">
            <h3>
                <%= user.username %>'s campgrounds:</h3>
            <ul>
                <% campgrounds.forEach(function(campground) { %>
                    <li>
                        <a href="/campgrounds/<%= campground.id %>">
                            <%= campground.name %>
                        </a>
                        <img src="<%= campground.image %>" />
                    </li>
                    <% }); %>
            </ul>
        </div>
    </div>

    <% include ../partials/footer %>
